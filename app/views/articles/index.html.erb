<h1 style="text-align: center"><%= I18n.t('articles.list') %></h1>
 
<%= link_to I18n.t('articles.create'), new_article_path, class: 'btn btn-primary btn-sm mb-2 mx-3' %>

<div class="container-fluid">
  <div class="row mb-1" style="border-style: groove">
    <div class="col-sm-3 border-right">
      <strong><%= I18n.t('articles.title') %></strong>
    </div>
    <div class="col-sm-5 border-right">
      <strong><%= I18n.t('articles.text') %></strong>
    </div>
    <div class="col-sm-2">
      <strong><%= I18n.t('articles.author') %></strong>
    </div>
    <div class="col-sm-1 ml-2 border-left">
      <strong><%= I18n.t('articles.actions') %></strong>
    </div>
  </div>
  <% @article.each do |article| %>
    <div class="row">
      <div class="col-sm-3"><%= article.title %></div>
      <div class="col-sm-5"><%= article.text %></div>
      <div class="col-sm-2"><%= article.author %></div>
      <div class="col-sm-2"><%= link_to '<button type="button" class="btn btn-info btn-sm mx-2 mb-1"><i class="far fa-eye"></i></button>'.html_safe, article_path(article), style: 'color:grey' %> <%= link_to '<button" class="btn btn-success btn-sm mx-2 px-2 mb-1"><i class="far fa-edit"></i></button>'.html_safe, edit_article_path(article), style: 'color:grey' %> <%= link_to '<button" class="btn btn-danger btn-sm mx-2 mb-1"><i class="far fa-trash-alt"></i></button>'.html_safe, article_path(article), method: :delete, data: {confirm: I18n.t('articles.DeleteConfirm')}, style: 'color:grey' %></div>
    </div>
  <% end %>
</div>
